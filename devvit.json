{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "color-dot-rush",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create Color Dot Rush Game Post",
        "description": "Create a new Color Dot Rush game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-challenge-post": {
        "endpoint": "/internal/execute-scheduled-tasks",
        "cron": "0 8 * * *"
      },
      "weekly-leaderboard-post": {
        "endpoint": "/internal/execute-scheduled-tasks",
        "cron": "0 9 * * 1"
      }
    }
  },
  "permissions": {
    "redis": true
  },
  "dev": {
    "subreddit": "color_dot_rush_dev"
  }
}
